#!/bin/bash
set -e

source $(dirname $0)/version

cd $(dirname $0)/..

mkdir -p bin
if [ "$(uname)" = "Linux" ]; then
    OTHER_LINKFLAGS="-extldflags -static -s"
fi
LINKFLAGS="-X github.com/rancher/drone-exporter.Version=$VERSION"
LINKFLAGS="-X github.com/rancher/drone-exporter.GitCommit=$COMMIT $LINKFLAGS"
CGO_ENABLED=0 go build -mod vendor -ldflags "$LINKFLAGS $OTHER_LINKFLAGS" -o bin/drone-exporter
if [ "$CROSS" = "true" ] && [ "$ARCH" = "amd64" ]; then
    GOOS=darwin go build -mod vendor -ldflags "$LINKFLAGS" -o bin/drone-exporter-darwin
    GOOS=windows go build -mod vendor -ldflags "$LINKFLAGS" -o bin/drone-exporter-windows
fi
